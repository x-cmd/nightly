# shellcheck shell=sh
# shellcheck disable=SC2039,3043

# Synchronized token in the x-bash user profile.

# shellcheck disable=SC2120
___x_cmd_gt_token() {
    param:void
    local O="${O:-GITEE_DEFAULT}"
    if [ $# -eq 0 ]; then
        ___x_cmd_gt_default get "gitee_$O" "token" 2>/dev/null || return 1
        return 0
    else
        [ $# -gt 1 ] && gt_log warn "Multiple tokens cannot be set at the same time,Set only the first token"
        local tmp_token
        tmp_token="$(___x_cmd_gt_default get "gitee_$O" "token")"

        if [ "$1" = "$tmp_token" ];then
            gt_log info "Consistent with the original token"
            return 0
        fi

        http "@___x_cmd_gt_$O" header put Authorization "token $1"
        local user
        user="$(___x_cmd_gt_current_owner)"
        if [ -z "$user" ];then
            http "@___x_cmd_gh_$O" header put Authorization "token $tmp_token"
            gt_log error "set default token $1 fail,Please check if it is a valid token"
            return 1
        fi
        ___x_cmd_gt_default put "gitee_$O"  "token" "$1"
        ___x_cmd_gt_default put "gitee_$O"  "owner" "$user"
        ___x_cmd_ui_tf "true" "set default token successfully,The default user is $user"
        ___x_cmd_gt_config_save
        return 0
    fi
}
