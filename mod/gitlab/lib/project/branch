# shellcheck shell=sh
# shellcheck disable=SC2039,3043
___x_cmd_gitlab_repo_branch(){
    param:subcmd ___x_cmd_gitlab_repo_branch                        \
        ls              "List repo branch list"                 \
        info            "Show the branch info"                  \
        add             "Add repo branch"                       \
        default         "Setup repo default branch"             \
        protection      "repo protection branch management"
    param:subcmd:try
    param:run

    gitlab_log error "Subcmd Not Found."
    ___x_cmd_gitlab_repo_branch _param_help_doc
    return 1
}

# Section: list & info
# shellcheck disable=SC2154
# https://gitee.com/api/swagger#/getV5ReposOwnerRepoBranches
___x_cmd_gitlab_repo_branch_ls(){
    param:scope     ___x_cmd_gitlab
    param:dsl       '
options:
    #1|--repo       "Provide owner name and repo name.(default:the current user repo)"   <>:RepoName
    --per_page      "results per page"                                                   <>=30
    --page          "page number of the results to fetch."                               <>=1
'
    param:run
    ___x_cmd_gitlab_param_init_owner_project

    local ___gitlab_error_msg="Couldn't find any data by: ${owner_project}"
    ___gitlab_ui_mutual ___x_cmd_gitlab_get_multi "/repos/${owner_project}/branches" per_page page <<A
        ___ui_table_json BranchName=.name Protected=.protected -- \$@
A
}

# shellcheck disable=SC2154
# https://gitee.com/api/swagger#/getV5ReposOwnerRepoBranchesBranch
___x_cmd_gitlab_repo_branch_info(){
    param:scope     ___x_cmd_gitlab
    param:dsl       '
options:
    #1|--branch     "branch name"                                                        <>
    #2|--repo       "Provide owner name and repo name.(default:the current user repo)"   <>:RepoName
'
    param:run
    ___x_cmd_gitlab_param_init_owner_project

    ___x_cmd_gitlab_http get "/repos/${owner_project}/branches/${branch}" | ___x_cmd_gitlab_repo_branch_info_status_handler
}

# shellcheck disable=SC2154
___x_cmd_gitlab_repo_branch_info_status_handler(){
    if [ ! -t 1 ] || [ -n "$ENFORCE_JSON" ]; then
        cat
        return
    fi

    ___x_cmd_git_json_query_rename branch_name=.name is_protected=.protected _links=._links.html
    if [ -n "$branch_name" ]; then
        ___x_cmd_ui_tf true  "Success" "branch_name: $branch_name" "is_protected: $is_protected" "url: $_links"
    else
        ___x_cmd_ui_tf false "Fail. Couldn't find any data: ${owner_project} ${branch}"
        return 1
    fi
}
# EndSection

# Section: add & default
# shellcheck disable=SC2154
# https://gitee.com/api/swagger#/postV5ReposOwnerRepoBranches
___x_cmd_gitlab_repo_branch_add(){
    param:scope     ___x_cmd_gitlab
    param:dsl       '
options:
    #1|--branch_name     "Branch name"                                                        <>
    #2|--repo            "Provide owner name and repo name.(default:the current user repo)"   <>:RepoName
    --refs               "origin branch name"                                                 <>="master"
'
    param:run
    ___x_cmd_gitlab_param_init_owner_project

    # TODO:http handle，delete repo return data is null.Status: 204 No Content
    if ___x_cmd_gitlab_http post "/repos/${owner_project}/branches" -- refs branch_name >/dev/null; then
        ___x_cmd_ui_tf true  "Add repo ${owner_project} ${branch_name} brach successfully"
    else
        ___x_cmd_ui_tf false "Add repo failure" "owner_project: $owner_project" "branch: $branch_name" "refs: $refs"
        return 1
    fi
}

# shellcheck disable=SC2154
___x_cmd_gitlab_repo_branch_default(){
    param:dsl       '
options:
    --repo                      "Provide owner name and repo name.(default:the current user repo)"   <>:RepoName
    #1|--branch                 "branch name"                                                        <>
'
    param:run
    ___x_cmd_gitlab_repo_update --repo "$repo" --default_branch "$branch"
}
# EndSection

# Section: protection
___x_cmd_gitlab_repo_branch_protection(){
    param:dsl       '
subcommand:
    set              "Set protection branch"
    unset            "Unset protection branch"
'
    param:run

    if [ -z "$PARAM_SUBCMD" ]; then
        ___x_cmd_gitlab_repo_branch_protection _param_help_doc
        gitlab_log warn "Subcmd Not Found."
        return 0
    fi

    "___x_cmd_gitlab_repo_branch_protection_$PARAM_SUBCMD" "$@"
}

# https://gitee.com/api/swagger#/putV5ReposOwnerRepoBranchesBranchProtection
___x_cmd_gitlab_repo_branch_protection_set(){
    param:scope     ___x_cmd_gitlab
    param:dsl       '
options:
    #1|--branch     "target branch name"                                                 <>
    #2|--repo       "Provide owner name and repo name.(default:the current user repo)"   <>:RepoName
'
    param:run
    ___x_cmd_gitlab_param_init_owner_project
    ___x_cmd_gitlab_http put "/repos/${owner_project}/branches/${branch}/protection" | \
        ___x_cmd_gitlab_repo_branch_protection_set_status_handler
}

___x_cmd_gitlab_repo_branch_protection_set_status_handler(){
    if [ ! -t 1 ] || [ -n "$ENFORCE_JSON" ]; then
        cat
        return
    fi

    ___x_cmd_git_json_query_rename html_url=._links.self
    if [ -n "$html_url" ]; then
        ___x_cmd_ui_tf true  "Success" "branch_name: $branch" "url: $html_url"
    else
        ___x_cmd_ui_tf false "Fail. Couldn't find any data: ${owner_project} ${branch}"
        return 1
    fi
}

# https://gitee.com/api/swagger#/deleteV5ReposOwnerRepoBranchesBranchProtection
___x_cmd_gitlab_repo_branch_protection_unset(){
    param:scope     ___x_cmd_gitlab
    param:dsl       '
options:
    #1|--branch     "target branch name"                                                 <>
    #2|--repo       "Provide owner name and repo name.(default:the current user repo)"   <>:RepoName
'
    param:run
    ___x_cmd_gitlab_param_init_owner_project

    # TODO:http handle，delete repo return data is null.Status: 204 No Content
    if ___x_cmd_gitlab_http delete "/repos/${owner_project}/branches/${branch}/protection" >/dev/null; then
        ___x_cmd_ui_tf true  "Unset branch: $branch protection successfully"
    else
        ___x_cmd_ui_tf false "Unset branch protection failure: $owner_project $branch"
        return 1
    fi
}
# EndSection

