# Section: key

# generate a key by openssl, then save it in the x-cmd cloud.
___x_cmd_gitlab_user_key(){
    param:scope      ___x_cmd_gitlab
    param:subcmd ___x_cmd_gitlab_user_key           \
        ls          "List all key"              \
        add         "Add key"                   \
        get         "Get one key"               \
        del         "Delete key"
    param:subcmd:try
    param:run

    ___x_cmd_gitlab_user_key _param_help_doc
    gitlab_log warn "Subcmd Not Found."
    return 1
}

# https://gitee.com/api/swagger#/getV5UserKeys
___x_cmd_gitlab_user_key_ls(){
    param:scope     ___x_cmd_gitlab
    param:dsl       '
options:
    --page        "page"                    <>:NatureNumber=1
    --per_page    "per_page"                <>:NatureNumber=20
'
    param:run

    ___gitlab_ui_mutual ___x_cmd_gitlab_get_multi "/user/keys" <<A
        ___ui_table_json Id=.id Title=.title Key=.key Url=.url -- \$@
A
}

# shellcheck disable=SC2154
# https://gitee.com/api/swagger#/getV5UserKeysId
___x_cmd_gitlab_user_key_get(){
    param:scope     ___x_cmd_gitlab
    param:dsl       '
options:
    --id        "provided key id"       <>:NatureNumber
'
    param:run

    ___x_cmd_gitlab_http get "v5/user/keys/$id" | \
    {
        ___x_cmd_git_json_query_rename key=.key
        if [ -n "$key" ]; then
            printf "%s" "$key"                        && return 0
        else
            gitlab_log error "Couldn't find key by $id"   && return 1
        fi
    }
}

# shellcheck disable=SC2181
# https://gitee.com/api/swagger#/deleteV5UserKeysId
___x_cmd_gitlab_user_key_del(){
    param:scope     ___x_cmd_gitlab
    param:dsl       '
options:
    #1|--id        "provided key id"           <>:NatureNumber
'
    param:run

    # TODO:http handle，delete repo return data is null.Status: 204 No Content
    if ___x_cmd_gitlab_http delete "/user/keys/$id" >/dev/null; then
        ___x_cmd_ui_tf true  "Deleted key successfully"
    else
        ___x_cmd_ui_tf false "Deleting key failure by $id."
        return 1
    fi
}

# shellcheck disable=SC2154
# https://gitee.com/api/swagger#/postV5UserKeys
___x_cmd_gitlab_user_key_add(){
    param:scope     ___x_cmd_gitlab
    param:dsl       '
options:
    --key       "add key"                   <>
    --title     "add key title"             <>
'
    param:run
    local gen_gitlab_json
    gen_gitlab_json="$(param:option2json)"

    ___x_cmd_gitlab_http post "/user/keys" "$gen_gitlab_json" | \
    {
        ___x_cmd_git_json_query_rename "$data" id=.id title=.title key=.key
        if [ -n "$id" ]; then
            ___x_cmd_ui_tf true  "Success" "Id: $id" "title: $title" "key: $key"
            return 0
        else
            ___x_cmd_ui_tf false "Add user key failure."
            return 1
        fi
    }
}
# EndSection
