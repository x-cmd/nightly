

# shellcheck shell=sh
# shellcheck disable=SC2039,3043

# Should be like this.
# gitlab repo member add el:admin
# gitlab repo member remove user-a
# gitlab repo member add user-b

# gitlab repo member +el:admin -user-a +user-b
___x_cmd_gitlab_groups_member(){
    param:subcmd ___x_cmd_gitlab_groups_member                     \
        ls              "List member"                       \
        user            "Show groups member user info"         \
        add             "Add member"                        \
        rm              "Remove member"
    param:subcmd:try
    param:run

    ___x_cmd_gitlab_groups_member _param_help_doc
    gitlab_log warn "Subcmd Not Found."
    return 1
}

# shellcheck disable=SC2154
# https://gitee.com/api/swagger#/getV5groupssgroupsMembers
___x_cmd_gitlab_groups_member_ls(){
    param:scope     ___x_cmd_gitlab
    param:dsl       '
options:
    --role          "role"                  <>:UserRole="all"
    #1|--groups        "groups space address"     <>:Address
    --page          "page"                  <>:NatureNumber=1
    --per_page      "per_page"              <>:NatureNumber=20
'
    param:run

    local ___gitlab_error_msg="Couldn't find any data by: $groups"
    ___gitlab_ui_mutual ___x_cmd_gitlab_get_multi "/groups/${groups##*/}/members" role <<A
        ___ui_table_json NameSpace=.login Name=.name Role=.member_role Url=.html_url -- \$@
A
}

# shellcheck disable=SC2154
# https://gitee.com/api/swagger#/getV5groupssgroupsMembershipsUsername
___x_cmd_gitlab_groups_member_user(){
    param:scope     ___x_cmd_gitlab
    param:dsl      '
options:
    --username          "username: user space address"   <>:UserName
    #1|--groups            "groups space address"              <>:address
'
    param:run

    ___x_cmd_gitlab_http get "/groups/${groups##*/}/memberships/${username##*/}" | \
    {
        ___x_cmd_git_json_query_rename groups=.groups.name name=.user.name name_space=.user.login role=.role html_url=.user.html_url
        if [ -n "$name" ]; then
             ___x_cmd_ui_tf true  "Success" "groups: $groups" "Name: $name" "NameSpace: $name_space" "Role: $role" "UserUrl: $html_url"
             return 0
        else
            ___x_cmd_ui_tf false "Couldn't find any data by $groups $username"
            return 1
        fi
    }
}

# shellcheck disable=SC2181
# https://gitee.com/api/swagger#/putV5groupssgroupsMembershipsUsername
___x_cmd_gitlab_groups_member_add(){
    param:scope     ___x_cmd_gitlab
    param:dsl       '
type:
    role = admin member
options:
    --groups           "groups"       <>:address
    --role          "role"      <>:role="member"
    #n              "username"
'
    param:run

    if [ $# -eq 0 ];then
        gitlab_log error "At least one user's spatial address is needed"
        return 1
    fi

    local username
    for username in "$@"; do
        # TODO:http handle，delete repo return data is null.Status: 204 No Content
        if ___x_cmd_gitlab_http put "/groups/${groups##*/}/memberships/${username##*/}" "$role" >/dev/null; then
            gitlab_log info  "Add $username successfully"
        else
            gitlab_log error "Add $username failure"
            return 1
        fi
    done
}

# shellcheck disable=SC2181
# https://gitee.com/api/swagger#/deleteV5groupssgroupsMembershipsUsername
___x_cmd_gitlab_groups_member_rm(){
    param:scope     ___x_cmd_gitlab
    param:dsl       '
options:
    --groups       "groups space address"         <>:address
    #n          "username"
'
    param:run

    if [ $# -eq 0 ];then
        gitlab_log error "At least one user's spatial address is needed"
        return 1
    fi

    local username
    for username in "$@"; do
        # TODO:http handle，delete repo return data is null.Status: 204 No Content
        if ___x_cmd_gitlab_http delete "/groups/${groups##*/}/memberships/${username##*/}" >/dev/null; then
            gitlab_log info  "Remove $username successfully."
        else
            gitlab_log error "Remove $username failure"
            return 1
        fi
    done
}

