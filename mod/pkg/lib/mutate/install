
___x_cmd_pkg_install(){
    x:trace pkg/install
    local pkg_name="${1:?Provide pkg name}"
    local version="${2:-$(___x_cmd_pkg_default_version "$pkg_name")}"
    local osarch="${3:-${___X_CMD_PKG_OSARCH:-$(___x_cmd_pkg_osarch)}}"
    [ -n "$version" ] || return

    ___x_cmd_pkg_download "$pkg_name" "$version" "$osarch" || return
    local script_path
    if script_path="$(___x_cmd_pkg___get_script_path "$pkg_name" "$version" "$osarch" install)"; then
        local bin_path
        bin_path="$(___x_cmd_pkg_xbin_path "$pkg_name" "$version")"
        if [ -x "$bin_path" ]; then
            return 0
        fi

        local file_suffix
        ___x_cmd_pkg___attr "$pkg_name" "$version" "$osarch" file_suffix
        local ball="$___X_CMD_PKG_DOWNLOAD_PATH/$pkg_name/$version.$file_suffix"
        pkg:info "Running $script_path after download $pkg_name $version"
        pkg:debug "pkg_name: $pkg_name version: $version osarch: $osarch file_suffix: $file_suffix ball: $ball bin_path: $bin_path"
        . "$script_path"
        return 0
    else
        local sb_repo
        local sb_app
        ___x_cmd_pkg___static_build_attr "$pkg_name" "$version" "$osarch"
        if [ -n "$sb_repo" ] && [ -n "$sb_app" ]; then
            return 0
        fi
        ___x_cmd_pkg_install___unzip "$pkg_name" "$version" "$osarch" || return
    fi
}

 ___x_cmd_pkg_uninstall(){
    x:trace pkg/uninstall
    local pkg_name="${1:?Provide pkg name}"
    local version="${2:-$(___x_cmd_pkg_default_version "$pkg_name")}"
    [ -n "$version" ] || return

    local install_path="$___X_CMD_PKG_INSTALL_PATH/$pkg_name/$version"
    local file_suffix
    ___x_cmd_pkg___attr "$pkg_name" "$version" "" file_suffix
    local ball="$___X_CMD_PKG_DOWNLOAD_PATH/$pkg_name/$version.$file_suffix"

    if [ -e "$ball" ]; then
        pkg:info "Remove $ball"
        x rmrf "$ball"
    fi
    if ! [ -d "$install_path" ];then
        pkg:warn "This $pkg_name $version is no exist."
    else
        pkg:info "Uninstalling $pkg_name $version"
        x rmrf "$install_path"
    fi
 }

___x_cmd_pkg_reinstall(){
    x:trace pkg/reinstall
    local pkg_name="${1:?Provide pkg name}"
    local version="${2:?Provide version}"
    local osarch="${3:-${___X_CMD_PKG_OSARCH:-$(___x_cmd_pkg_osarch)}}"
    [ -n "$version" ] || return

    local file_suffix
    ___x_cmd_pkg___attr "$@" "$osarch" file_suffix
    local ball="$___X_CMD_PKG_DOWNLOAD_PATH/$pkg_name/$version.$file_suffix"
    pkg:debug "ball: $ball"
    if [ -f "$ball" ]; then
        pkg:info "Delete $ball and reinstall $pkg_name $version"
        x rmrf "$ball"
    fi
    ___x_cmd_pkg_install "$@"
    # Delete the installation. Re unpack or running the installation script ?
}


# This is default
___x_cmd_pkg_install___unzip(){
    local pkg_name="${1:?Provide pkg name}"
    local version="${2:?Provide version}"
    local osarch="${3:-${___X_CMD_PKG_OSARCH:-$(___x_cmd_pkg_osarch)}}"

    local bin_path
    bin_path="$(___x_cmd_pkg_xbin_path "$pkg_name" "$version")"
    if [ -x "$bin_path" ]; then
        return 0
    fi
    pkg:debug "bin_path: $bin_path"

    local file_suffix
    ___x_cmd_pkg___attr "$pkg_name" "$version" "$osarch" file_suffix
    local ball="$___X_CMD_PKG_DOWNLOAD_PATH/$pkg_name/$version.$file_suffix"
    local unpack_dir="$___X_CMD_PKG_DOWNLOAD_PATH/$pkg_name/$version"
    local tgt="$___X_CMD_PKG_INSTALL_PATH/$pkg_name/$version"

    pkg:info "Unpack: $ball to $unpack_dir"
    x uz "$ball" "$unpack_dir" || {
        pkg:warn "Fail to unzip $ball"
    }
    x rmrf "$tgt" && mkdir -p "$tgt"
    pkg:debug "Moving $unpack_dir to $tgt"
    mv -f "$unpack_dir"/*/* "$tgt"
    x rmrf "$unpack_dir"
}

