# shellcheck    shell=sh

xrc param/latest

x log init yanfa

xrc:mod:lib yanfa   all ws mod pkg init try git release xb xc

# git config --worktree --get-regexp "remote[a-z\.]+.url"

___X_CMD_YANFA_CONCURRENCY=5

___x_cmd_yanfa_fish(){
    docker run --rm -it dideler/fish-shell
    # docker run --rm -it xcmd/fish
}

___x_cmd_yanfa(){
    param:dsl <<A
subcommand:
    init        "init"
    mod         "modules"
    pkg         "package"
    release     "release"
    ws          "workspace"
    all         "all modules"
    xb          "x-bash"
    xc          "x-cmd"
    try         "do some experiment on all poxis shell"
    fish        "try fish shell"
A
    param:run

    if [ -z "${PARAM_SUBCMD}" ]; then
        ___x_cmd_yanfa help
        return 0
    fi

    "___x_cmd_yanfa_${PARAM_SUBCMD}" "$@"
}

xrc setmain ___x_cmd_yanfa
